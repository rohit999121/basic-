#include <iostream>

using namespace std;

int
main ()
{

  int a[6] = { 1, 2, 3, 4, 5, 6 };
  int n = sizeof (a) / sizeof (a[0]);
  int i, pos, num, m;

  cout << "elements in array " << endl;

  for (i = 0; i < n; i++)
    {

      cout << a[i] << "\t";
    }
  cout << " \n enter number to inserted " << endl;
  cin >> m;

  for (i = 0; i < n + 1; i++)
    {
      a[n] = m;
      cout << a[i] << "\t";
    }
  return 0;
}
