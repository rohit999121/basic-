#include <iostream>

 using namespace std;

 
int 
main () 
{
  
 
int a[6] = { 1, 2, 3, 4, 5, 6 };
  
int n = sizeof (a) / sizeof (a[0]);
  
int i, pos, num, m;
  
 
cout << "elements in array " << endl;
  
 
for (i = 0; i < n; i++)
    
    {
      
 
cout << a[i] << "\t";
    
}
  
cout << " \n enter number to inserted and  postion" << endl;
  
cin >> m;
  
cout << "enter postion of of number to be inserted" << endl;
  
cin >> pos;
  
 
for (i = n - 1; i >= pos; i--)
    
 
a[i + 1] = a[i];
  
 
a[pos] = m;
  
n = n + 1;
  
   
 
for (i = 0; i < n; i++)
   { 
 
cout << a[i] << "\t";
   }
 
return 0;

}
